<% if @section_tabs -%>
	<% for tab in @section_tabs -%>
		<a href="<%=h url_for(:controller => 'section', :action => tab['action'], :name => tab['name']) %>" class="action_tab<%= '_active' if tab['active'] %>"><%= image_tag(tab['image'], :size => '22x22') %>&nbsp;<%=h tab['title'] %></a>
	<% end -%>
<% end -%>